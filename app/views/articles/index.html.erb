<div class="row">
<% @articles.each do |article|%>
<%if appuser_signed_in?%>
<div class="col s12 m12 l6 ">
    <h6 class="header"><%= link_to article.title,article %>
   </h6>
    <div class="card horizontal">
      <div class="card-image">
        <!--<img src="../../../images/quad.jpg">-->
        <%= image_tag("quad.jpg", :alt => "rss feed") %>
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <p><%= article.body %> </p>
        </div>
        <div class="card-action">
        <%= link_to "eliminar",article, method: :delete %>        </div>
      </div>
    </div>
  </div>
<% else %>

